<?xml version = "1.0" encoding = "UTF-8"?>

<configuration>
    <property name="LOG_PATH" value="message_logs"/>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>[%d{yyyy-MM-dd' 'HH:mm:ss.SSS}] [%25.25class] [%thread] [%line] [%-5level] %m%n</pattern>
        </encoder>
    </appender>
    <!--############################################################################################################-->
    <appender name="FILE_DOGS" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <File>${LOG_PATH}/dogs.log</File>
        <append>true</append>
        <encoder>
            <pattern>[%d{yyyy-MM-dd' 'HH:mm:ss.SSS}] [%C] [%t] [%L] [%-5p] %m%n</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/dogs.%d{yyyy-MM-dd HH}.%i.txt</fileNamePattern>
            <maxFileSize>10MB</maxFileSize>
            <maxHistory>30</maxHistory>
            <totalSizeCap>3GB</totalSizeCap>
        </rollingPolicy>
    </appender>
    <!--############################################################################################################-->
    <appender name="FILE_ID" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <File>${LOG_PATH}/id.log</File>
        <append>true</append>
        <encoder>
            <pattern>[%d{yyyy-MM-dd' 'HH:mm:ss.SSS}] [%C] [%t] [%L] [%-5p] %m%n</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/id.%d{yyyy-MM-dd HH}.%i.txt</fileNamePattern>
            <maxFileSize>10MB</maxFileSize>
            <maxHistory>30</maxHistory>
            <totalSizeCap>3GB</totalSizeCap>
        </rollingPolicy>
    </appender>
    <!--############################################################################################################-->
    <appender name="FILE_BREED" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <File>${LOG_PATH}/breed.log</File>
        <append>true</append>
        <encoder>
            <pattern>[%d{yyyy-MM-dd' 'HH:mm:ss.SSS}] [%C] [%t] [%L] [%-5p] %m%n</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/breed.%d{yyyy-MM-dd HH}.%i.txt</fileNamePattern>
            <maxFileSize>10MB</maxFileSize>
            <maxHistory>30</maxHistory>
            <totalSizeCap>3GB</totalSizeCap>
        </rollingPolicy>
    </appender>
    <!--############################################################################################################-->
    <appender name="TOMCAT" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <File>${LOG_PATH}/myTomcatLog.log</File>
        <append>true</append>
        <encoder>
            <pattern>[%d{yyyy-MM-dd'T'HH:mm:ss.sss}] [%C] [%t] [%L] [%-5p] %m%n</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/myTomcatLog.%d{yyyy-MM-dd HH}.%i.txt</fileNamePattern>
            <maxFileSize>10MB</maxFileSize>
            <maxHistory>30</maxHistory>
            <totalSizeCap>3GB</totalSizeCap>
        </rollingPolicy>
    </appender>
    <root level="INFO" additivity="false">
        <appender-ref ref="TOMCAT"/>
        <appender-ref ref="FILE_DOGS"/>
        <appender-ref ref="FILE_ID"/>
        <appender-ref ref="FILE_BREED"/>
        <appender-ref ref="STDOUT"/>
    </root>
    <logger name="org.apache.catalina" level="INFO" additivity="false">
        <appender-ref ref="TOMCAT"/>
        <appender-ref ref="FILE_DOGS"/>
        <appender-ref ref="FILE_ID"/>
        <appender-ref ref="FILE_BREED"/>
        <appender-ref ref="STDOUT"/>
    </logger>
    <logger name="org.apache.coyote" level="INFO" additivity="false">
        <appender-ref ref="TOMCAT"/>
        <appender-ref ref="FILE_DOGS"/>
        <appender-ref ref="FILE_ID"/>
        <appender-ref ref="FILE_BREED"/>
        <appender-ref ref="STDOUT"/>
    </logger>
    <logger name="org.apache.tomcat" level="INFO" additivity="false">
        <appender-ref ref="TOMCAT"/>
        <appender-ref ref="FILE_DOGS"/>
        <appender-ref ref="FILE_ID"/>
        <appender-ref ref="FILE_BREED"/>
        <appender-ref ref="STDOUT"/>
    </logger>
    <logger name="org.springframework.boot" level="INFO" additivity="false">
        <appender-ref ref="TOMCAT"/>
        <appender-ref ref="FILE_DOGS"/>
        <appender-ref ref="FILE_ID"/>
        <appender-ref ref="FILE_BREED"/>
        <appender-ref ref="STDOUT"/>
    </logger>
    <logger name="com.lambdaschool" level="TRACE" additivity="false">
        <appender-ref ref="TOMCAT"/>
        <appender-ref ref="FILE_DOGS"/>
        <appender-ref ref="FILE_ID"/>
        <appender-ref ref="FILE_BREED"/>
        <appender-ref ref="STDOUT"/>
    </logger>
</configuration>